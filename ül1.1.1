import math

# Sigarettide info
SIGARETTE_PAKIS = 20
NIKOTIIN_MG = 0.9
TORV_MG = 11
SURMAV_NIKOTIIN = 50  # mg

# Küsime kasutajalt kuu nime
kuu_sisestus = input("Sisesta kuu nimi: ").strip().lower()

# Failist lugemine
faili_nimi = "kulud.txt"
try:
    with open(faili_nimi, "r", encoding="utf-8") as f:
        read_lines = [line.strip() for line in f if line.strip()]
except FileNotFoundError:
    print(f"Faili '{faili_nimi}' ei leitud.")
    exit()

# Loendame kuupõhised summad ja paketid
kuu_summa = 0.0
kuu_pakid = 0
kokku_summa = 0.0
kokku_pakid = 0

i = 0
while i < len(read_lines):
    kuu = read_lines[i].lower()
    summa = float(read_lines[i + 1])
    pakid = int(read_lines[i + 2])

    # Kuu kontroll
    if kuu == kuu_sisestus:
        kuu_summa += summa
        kuu_pakid += pakid

    # Kogu kogus
    kokku_summa += summa
    kokku_pakid += pakid

    i += 3

# Tarbitud nikotiini ja tõrva arvutus
kokku_sigaretid = kokku_pakid * SIGARETTE_PAKIS
kokku_nikotiin = kokku_sigaretid * NIKOTIIN_MG
kokku_torv = kokku_sigaretid * TORV_MG

# Kuupõhine väljund
print(f"Kuus '{kuu_sisestus}' kulutati {kuu_summa:.2f} eurot ja osteti {kuu_pakid} pakki.")

# Kogu perioodi väljund
print(f"Kokku kulutati {kokku_summa:.2f} eurot ja osteti {kokku_pakid} pakki.")
print(f"Vanaisa tarbis kokku {kokku_nikotiin} mg nikotiini ja {kokku_torv} mg tõrva.")

# Kontroll surmava nikotiini osas
if kokku_nikotiin > SURMAV_NIKOTIIN:
    kord = math.ceil(kokku_nikotiin / SURMAV_NIKOTIIN)
    print(f"Selline kogus nikotiini ületab {kord}-kordse surmava annuse ühekordsel")
    print("tarbimisel!")

# Salvestame kokkuvõtte faili kulud_kokku.txt
with open("kulud_kokku.txt", "w", encoding="utf-8") as f_out:
    f_out.write(f"{kokku_summa:.2f}\n")
    f_out.write(f"{kokku_pakid}\n")





